<div class="header"><h1>New Form</h1></div>

<%= form_with model: @form do |form| %>
    <div class="contact-shadow-box">
        <div class="form-row">
            <div class="form-group col-md-6">
                <%= form.label :title %><br>
                <%= form.text_field :title, class: "form-control", id: "inputTitle4", placeholder: "Title" %>
            </div>

            <div class="form-group col-md-6">
                <%= form.label :description %><br>
                <%= form.text_field :description, class: "form-control", id: "inputDescription4", placeholder: "Description" %>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <%= form.label :date %><br>
                <%= form.date_field :date, class: "form-control", id: "inputDate4", placeholder: "Date" %>
            </div>

            <div class="form-group col-md-6">
                <%= form.label :age %><br>
                <%= form.text_field :age,  class: "form-control", id: "inputage4", placeholder: "Age" %>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <%= form.label :city %><br>
                <%= form.select(:city, Form::CITY_LIST)%>
            </div>

            <div class="form-group col-md-6">
                <%= form.label :gender %><br>
                <%= form.select(:gender, Form::GENDER_LIST) %>
            </div>
        </div>

            <div>
                <%= form.submit "Save", class: "btn btn-primary" %>
            </div>
    </div>

<% end %>

<style>
    .header{
        text-align: center;
    }
    .contact-shadow-box{
        display: flex;
        flex-direction: column;
        justify-content: center;
        max-width: 800px;
        position: relative;
        left: 600px;
        top: 100px;
    }

</style>